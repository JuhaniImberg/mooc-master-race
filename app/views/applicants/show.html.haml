- model_class = Applicant
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  = @applicant.name
%p
  %strong= model_class.human_attribute_name(:tmc_account) + ':'
  = @applicant.nick
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  = @applicant.email

%p
  - unless @applicant.missing_points.blank?
    %strong= model_class.human_attribute_name(:missing_points) + ':'
    %br
    = @applicant.missing_points


%p

  %table.table.table-striped.table-hover.table-bordered
    %thead
      %tr
        - 1.upto(12).each do |i|
          %th= model_class.human_attribute_name("week#{i}".to_sym)
    %tbody
      %tr
        - 1.upto(12).each do |i|
          %td= @applicant.send("week#{i}".to_sym)
%p

  = form_for @applicant do |f|
    .form-group
      = f.label "Kirjoitelma:"
      .col-sm-10
        = f.text_area :essay, class: "input-block-level form-control", rows: 10, type: "text"
    = f.submit "Tallenna kirjoitelma", class: 'btn btn-primary'

.form-actions
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_applicant_path(@applicant), :class => 'btn'
