- model_class = Applicant
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @applicant.name
%p
  %strong= model_class.human_attribute_name(:nick) + ':'
  %br
  = @applicant.nick
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @applicant.email

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), applicants_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_applicant_path(@applicant), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), applicant_path(@applicant), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
