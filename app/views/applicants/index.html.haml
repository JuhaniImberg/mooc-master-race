- model_class = Applicant
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:nick)
      %th= model_class.human_attribute_name(:email)
      %th= model_class.human_attribute_name(:created_at)
      %th= model_class.human_attribute_name(:missing_points)
      - 1.upto(12).each do |i|
        %th= model_class.human_attribute_name("week#{i}".to_sym)

      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @applicants.each do |applicant|
      %tr
        %td= applicant.name
        %td= link_to applicant.nick, applicant_path(applicant)
        %td= applicant.email
        %td=l applicant.created_at
        %td= applicant.missing_points
        - 1.upto(12).each do |i|
          %td= applicant.send("week#{i}".to_sym).to_s
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_applicant_path(applicant), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), applicant_path(applicant), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_applicant_path, :class => 'btn btn-primary'
