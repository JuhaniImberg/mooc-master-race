- model_class = Applicant
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize

%table.table.table-striped.table-hover.table-bordered
  %thead
    %tr
      %th= sortable_model_name(:name)
      %th= sortable_model_name(:nick)
      %th= sortable_model_name(:email)
      %th= sortable_model_name(:created_at)
      %th= sortable_model_name(:missing_points)
      - 1.upto(12).each do |i|
        %th= sortable_model_name("week#{i}".to_sym)

      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @applicants.each do |applicant|
      %tr
        %td= applicant.name
        %td= link_to applicant.nick, applicant_path(applicant.key)
        %td= applicant.email
        %td=l applicant.created_at
        %td= applicant.missing_points
        - 1.upto(12).each do |i|
          %td= format_week_percents(applicant.send("week#{i}".to_sym))
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_applicant_path(applicant), :class => 'btn btn-mini'
